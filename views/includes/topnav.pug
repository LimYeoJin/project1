.header.clearfix
  nav.navbar.navbar-expand-md.navbar-light.bg-light.fixed-top
    .container
      a.navbar-brand(href="/") EVENTBRITE
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Events
            div.dropdown-menu(aria-labelledby="navbarDropdown")
              a.dropdown-item(href="/questions/new") Create Event
              a.dropdown-item(href="/questions") Events list

          li.nav-item
            a.nav-link(href="/users") Users
          if (!currentUser) 
            li.nav-item
              a.nav-link(href='/signin') Signin
            li.nav-item
              a.nav-link(href='/users/new') Signup
          else
            li.nav-item
              a.nav-link(href=`/users/${currentUser._id}`) My Profile
            li.nav-item
              a.nav-link(href='/signout') Signout
        
          
